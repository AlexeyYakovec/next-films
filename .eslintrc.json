{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "bracketSpacing": true,
        "bracketSameLine": true,
        "trailingComma": "all",
        "printWidth": 80,
        "tabWidth": 4,
        "arrowParens": "always",
        "endOfLine": "lf"
      }
    ]
  }
}

